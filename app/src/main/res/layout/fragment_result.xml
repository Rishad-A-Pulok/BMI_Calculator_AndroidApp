<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ResultFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Result"
        android:textSize="35sp"
        android:textColor="@color/teal_700"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:textSize="35sp"
        android:text="Your BMI is: "
        android:ems="10"/>
    <TextView
        android:id="@+id/resultTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:textSize="35sp"
        android:ems="10"/>
    <TextView
        android:id="@+id/msgTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:textSize="35sp"
        android:ems="10"/>

    <ImageView
        android:id="@+id/imgIV"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_gravity="center" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:textStyle="bold"
        android:text="BMI, Basic Categories"
        android:gravity="center"
        android:textSize="25sp"/>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TableRow>
            <TextView
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:background="@color/blue"
                android:gravity="left"
                android:text="Category"
                android:textSize="20sp"
                android:textStyle="bold"/>
            <TextView
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:background="@color/blue"
                android:gravity="center"
                android:text="BMI"
                android:textSize="20sp"
                android:textStyle="bold"/>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:text="Underweight(Severe thinness)"
                android:textSize="15sp"/>
            <TextView
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:text="less than 16.0"
                android:textSize="20sp"/>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:text="Underweight(Moderate thinness)"
                android:padding="3dip"
                android:textSize="15sp"/>
            <TextView
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="16.0 – 16.9"
                android:textSize="20sp"/>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:text="Underweight(Mild thinness)"
                android:textSize="15sp"/>
            <TextView
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="17.0 – 18.4"
                android:gravity="center"
                android:textSize="20sp"/>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:text="Normal range"
                android:textSize="15sp"/>
            <TextView
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="18.5 – 24.9"
                android:gravity="center"
                android:textSize="20sp"/>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:text="Overweight(Pre-obese)"
                android:textSize="15sp"/>
            <TextView
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="25.0 – 29.9"
                android:gravity="center"
                android:textSize="20sp"/>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:text="Obese (Class I)"
                android:textSize="15sp"/>
            <TextView
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="30.0 – 34.9"
                android:gravity="center"
                android:textSize="20sp"/>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:text="Obese (Class II)"
                android:textSize="15sp"/>
            <TextView
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="35.0 – 39.9"
                android:gravity="center"
                android:textSize="20sp"/>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:text="Obese (Class III)"
                android:textSize="15sp"/>
            <TextView
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="≥ 40.0"
                android:gravity="center"
                android:textSize="20sp"/>
        </TableRow>
    </TableLayout>

</LinearLayout>